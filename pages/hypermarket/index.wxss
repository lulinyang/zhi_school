/* pages/hypermarket/index.wxss */

button:not([size='mini']) {
  min-height: 0;
}

.shopping_info_box {
  text-align: left;
  padding-left: 16rpx;
}

.shopping_info_name {
  font-size: 28rpx;
  color: #333;
}

.shopping_info_tel {
  font-size: 24rpx;
  color: #666;
  line-height: 28rpx;
}

.contact.van-button {
  width: 93px;
  height: 32px;
  line-height: 32px;
}

.contact.van-button label {
  font-weight: normal;
  font-size: 28rpx;
  color: #000;
  /* line-height: 32px; */
}

.van-sidebar-item.sidebar-item {
  border: 0;
  text-align: center;
  background-color: #f6f6f6;
}

.spinner_box {
  text-align: center;
  padding: 80rpx 0 0;
}

.van-sidebar-item.sidebar-item.van-sidebar-item--selected {
  background-color: #fff;
}

.van-sidebar.sidebar {
  border: 0;
  width: 100%;
}

.sidebar.van-sidebar.van-hairline--top-bottom:after {
  border-width: 0;
}

.van-sidebar-item.sidebar-item .van-sidebar-item__text {
  color: #333;
  font-size: 26rpx;
  text-align: center;
}

.van-sidebar-item.sidebar-item .van-info {
  background-color: #ffe600;
}

.goods_cell.van-cell {
  padding-bottom: 0;
  padding-left: 20rpx;
}


.footer-box {
  position: fixed;
  bottom: 0;
  width: calc(100% - 96rpx);
  padding-left: 64rpx;
  padding-right: 32rpx;
  padding-bottom: 60rpx;
  border-top: 1px solid #f2f2f2;
  z-index: 9999;
  background-color: #fff;
}

.cart_car {
  margin-top: -16rpx;
}

.cart_car .van-info {
  top: 10px;
  right: 12px;
}

.price_text {
  color: #333;
  font-size: 28rpx;
  line-height: 60rpx;
}

.other_price_text {
  color: #666;
  font-size: 24rpx;
  line-height: 30rpx;
}

.buy_btn.van-button {
  width: 220rpx;
  height: 96rpx;
  margin-top: 16rpx;
}

.buy_btn.van-button label {
  color: #000;
  font-size: 28rpx;
  font-weight: 500;
}

.sidebar_bg {
  background-color: #f6f6f6;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.goods_info_box {
  text-align: left;
  padding-left: 16rpx;
}

.goods_name {
  color: #333;
  font-size: 28rpx;
  line-height: 40rpx;
}

.goods_info1 {
  font-size: 22rpx;
  color: #999;
  line-height: 30rpx;
}

.goods_price {
  color: #f03636;
  font-size: 32rpx;
}

.goods_info2 {
  margin-top: 20rpx;
}

.opt_box {
  text-align: right;
}

.opt_cart {
  vertical-align: top;
}

.opt_cart2 {
  line-height: 46rpx;
  font-size: 28rpx;
  display: inline-block;
  color: #333;
  margin: 0 16rpx;
}
.goods_cart_content {
  text-align: left;
}
.goods_cart_box {
  padding: 32rpx 32rpx 0;
}

.goods_cart_title {
  font-size: 26rpx;
  color: #000;
}

.goods_item_name {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
  /* vertical-align: top; */
  padding-left: 16rpx;
}

.goods_item_price {
  font-size: 32rpx;
  color: #f03636;
  line-height: 80rpx;
}

.goods_item_opt {
  /* height: 80rpx; */
  /* position: relative; */
  text-align: right;
  padding-top: 19rpx;
}
.van-cell.goods_cart_cell {
  padding-bottom: 0;
}
